{
  "name": "shadcn-installer",
  "version": "0.1.0",
  "description": "Enhanced tooling for shadcn/ui with improved monorepo support",
  "keywords": [
    "shadcn/ui",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Steve Zhu <4130171+stevezhu@users.noreply.github.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "shadcn-installer": "./bin/run.js"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier -w .",
    "lint": "prettier -c .",
    "test": "tsc --noEmit"
  },
  "oclif": {
    "bin": "shadcn-installer",
    "commands": "./dist/commands",
    "dirname": "shadcn-installer",
    "topicSeparator": " "
  },
  "dependencies": {
    "@oclif/core": "^4.5.6"
  },
  "devDependencies": {
    "@stzhu/prettier-plugin-tsconfig": "^0.6.1",
    "@stzhu/tsconfig": "^0.1.0",
    "@types/node": "^18.19.130",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  }
}
